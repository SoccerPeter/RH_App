<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:vm="clr-namespace:RH_App.ViewModels"
			 x:Class="RH_App.Views.DiscographyDetailPage"
			 x:DataType="vm:DiscographyDetailViewModel"
             BackgroundColor="White">
    <ScrollView BackgroundColor="White">
        <VerticalStackLayout Margin="12">
            <Label Text="{Binding Item.album}" FontSize="Large" TextColor="Black" />
            <Label Text="{Binding Item.albumInfo}" FontSize="Default" TextColor="Black"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

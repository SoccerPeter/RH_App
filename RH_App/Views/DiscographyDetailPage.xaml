<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:vm="clr-namespace:RH_App.ViewModels"
			 x:Class="RH_App.Views.DiscographyDetailPage"
			 x:DataType="vm:DiscographyDetailViewModel"
             BackgroundImageSource="Black">
    <ScrollView>
        <VerticalStackLayout Margin="12">
            <Label Text="{Binding Item.strAlbum}" FontSize="Large" TextColor="White" />
            <Label Text="{Binding Item.strDescriptionEN}" FontSize="Default" TextColor="White"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
